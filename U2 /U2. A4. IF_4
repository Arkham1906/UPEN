	op1 = po1 - po4
	op2 = po3 - po4
	op3 = po1 - po2
	op4 = p02 - po3
	suma = po1 + po2 + po3 + po4
	promedio = suma/4
	
	Mostrar p4
	Mostrar p3
	Mostrar p2
	Mostrar p1
	
	Mostrar "La resta del mayor menos el menor es = " op1
	Mostrar "La resta del tercero menos el menor es = " op2
	Mostrar "La resta del mayor menos el segundo es = " op3
	Mostrar "La resta del segundo menos el tercero es = " op4
	Mostrar "La suma de todas las ventas es de: = " suma
	Mostrar "El promedio de las ventas es de = " promedio

	
 FinAlgoritmo




